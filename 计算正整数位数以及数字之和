#include<stdio.h>
#include<string.h>
int main()
{
    printf("请输入一个正整数。\n");
    int num, n=1, sum=0;
    int temp;
    scanf_s("%d", &num);
    while (num>0)
    {
        temp = num % 10;
        sum += temp;
        num = num / 10;
        if (num > 0)
        {
            n++;
        }
    }
    printf("n=%d,sum=%d\n", n, sum);
    
}
